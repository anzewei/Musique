<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/original_green_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_original_green"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/red_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_red"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/orange_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_orange"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/purple_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_purple"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/navy_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_navy"
            tools:ignore="ContentDescription" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blue_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_blue"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/sky_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_sky"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/seagreen_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_seagreen"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/cyan_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_cyan"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/pink_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/theme_pink"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>
